@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>There are no machines yet</h3>
} 

@foreach (Machine machine in Model)
{
  <li><strong>@Html.ActionLink($"{machine.Name + ", " + machine.Status}", "Details", new { id = machine.MachineId })</strong></li>
}
<hr>
<h4>@Html.ActionLink("Add new machine", "Create")</h4>