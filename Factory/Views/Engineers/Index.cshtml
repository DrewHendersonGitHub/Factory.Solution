@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>There are no engineers hired yet</h3>
}

@foreach(Engineer engineer in Model)
{
  string str = engineer.IsActive ? "Active" : "Unactive";
  <li><strong>@Html.ActionLink($"{engineer.Name + ", " + str}", "Details", new { id = engineer.EngineerId })</strong></li>
}
<hr>
<h4>@Html.ActionLink("Add new engineer", "Create")</h4>