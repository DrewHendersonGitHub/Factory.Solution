@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;

@if (@ViewBag.num != 0)
{
  <h2>Add a machine</h2>
  <h4>Add a machine to this engineer: @Html.DisplayFor(model => model.Name)</h4>
  @using (Html.BeginForm())
  {
    @Html.Hidden("EngineerId")
    @Html.Label("Select a machine")
    @Html.DropDownList("MachineId")
    <input type="submit" value="Save" />
  }
}
else
{
  <h3>There are no machines</h3>
}